{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "lib": [
      "es2019"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "build/",
    "types": [
      "@types/mocha",
      "node"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  },
  "sideEffects": false,
  "include": [
    "src",
    "index.ts"
  ]
}
